
@(Html.Kendo().Grid<WebAppCore.Areas.EmployeeManage.Models.EmployeeViewModel>()
                                            .Name("grdEmployeeSearch")
                                            .Columns(columns =>
                                            {
                                                columns.Bound(c => c.EmployeeId).Width(110);
                                                columns.Bound(c => c.FirstName).Width(300);
                                                columns.Bound(c => c.LastName).Width(300);
                                                columns.Bound(c => c.FullName).Width(300);
                                                columns.Bound(c => c.Initial).Width(300);
                                                columns.Bound(c => c.Email).Width(300);

                                            })

                                        .Scrollable()

                                             .Filterable()
                                        .Sortable()

                                        .ColumnMenu()
                                       .Resizable(resizable => resizable.Columns(true))
                                       .Events(events => events
                                            .DataBound("onDataBound")
                                            .DataBinding("onDataBinding")
                                        )
                                            .DataSource(dataSource => dataSource
                                                .Ajax()
                                                .Events(events => events.Error("onError"))
                                                .Read(read => read.Action(
                                                    routeValues: "GetEmployeeDetails",
                                                    controllerName: "EmployeeManage", actionName: "Products_Read"
                                                    ).Data("JsEmployee.GetEmployeeSearchDataForRead")
                                                    
                                                    )
                                            )
)

